<resources>

    <style name="AppTheme" parent="AppThemeBase" />

    <style name="LoginTheme" parent="LoginThemeBase" />

    <style name="ActionBarTheme" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">?android:colorBackground</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.DayNight">
        <item name="android:windowIsFloating">true</item>
        <item name="android:dialogCornerRadius">18dp</item>
        <item name="android:colorButtonNormal">@color/theme_foreground_light</item>
        <item name="colorBackgroundFloating">@color/theme_background_light</item>
    </style>

    <style name="AppThemeBase" parent="@style/Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <item name="android:windowBackground">@color/uwu_bg</item>
        <item name="android:scrollbarSize">0.0dip</item>
        <item name="android:homeAsUpIndicator">@drawable/uwu_back_arrow</item>
        <item name="android:statusBarColor">?colorPrimary</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="colorAccent">@color/uwu_accent_light</item>
        <item name="android:colorButtonNormal">@color/theme_foreground_light</item>
        <item name="colorBackgroundFloating">@color/uwu_bg_card</item>
        <item name="colorMainText">@color/colorText</item>
        <item name="colorPrimary">@color/uwu_primary_light</item>
        <item name="colorPrimaryDark">?colorPrimary</item>
        <item name="elevation">0.0dip</item>
        <item name="colorIcon">@android:color/white</item>
        <item name="colorText">@android:color/white</item>
        <item name="preferenceCategoryStyle">@style/Preference.xd.Category</item>
        <item name="android:dialogTheme">@style/uwu_dialog</item>
        <item name="android:alertDialogTheme">@style/uwu_alert_dialog</item>
        <item name="android:actionOverflowMenuStyle">@style/uwu_popup_window</item>
        <item name="android:dialogCornerRadius">28.0dip</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:tint">@android:color/white</item>
        <item name="android:homeAsUpIndicator">@drawable/uwu_back_arrow</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorPrimary">@color/uwu_primary_light</item>
        <item name="colorPrimaryDark">?colorPrimary</item>
    </style>

    <style name="LoginThemeBase" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/theme_background_light</item>
        <item name="android:colorAccent">@color/theme_accent_light</item>
        <item name="android:colorButtonNormal">@color/theme_foreground_light</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="colorPrimary">?android:colorBackground</item>
        <item name="colorPrimaryDark">?android:colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Preference.xd.Category" parent="@style/Preference.Category">
        <item name="android:layout">@layout/xd_preference_category_material</item>
        <item name="android:selectable">false</item>
        <item name="android:shouldDisableView">false</item>
        <item name="allowDividerBelow">false</item>
    </style>

    <style name="xd_text_primary">
        <item name="android:textSize">19.0sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:fontFamily">@font/virgoo</item>
    </style>

    <style name="xd_text_secondary">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="uwu_crash_logger_theme" parent="@style/AppThemeBase">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="uwu_button_borderless" parent="@android:style/Widget.Material.Button.Borderless.Colored">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/uwu_accent</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="uwu_button_borderless_dialog" parent="@style/uwu_button_borderless">
        <item name="android:minWidth">64.0dip</item>
        <item name="android:minHeight">48.0dip</item>
    </style>

    <style name="uwu_modder_app_anim" parent="@style/uwu_modder_app">
        <item name="android:windowEnterAnimation">@anim/uwu_anim_open</item>
        <item name="android:windowExitAnimation">@anim/uwu_anim_exit</item>
    </style>

    <style name="uwu_modder_app" parent="@style/uwu_alert_dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/uwu_modder_app_anim</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="uwu_alert_dialog" parent="@style/uwu_dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:textSize">17.0sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="uwu_dialog" parent="@android:style/Theme.Material.Light.Dialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:buttonStyle">@style/uwu_button_borderless</item>
        <item name="android:windowBackground">@drawable/uwu_dialog_bg</item>
        <item name="android:windowAnimationStyle">@style/uwu_modder_app_anim</item>
        <item name="android:windowMinWidthMajor">75.0%</item>
        <item name="android:windowMinWidthMinor">75.0%</item>
        <item name="android:colorControlHighlight">@color/uwu_ripple</item>
        <item name="android:colorAccent">@color/uwu_accent</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/uwu_button_borderless_dialog</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/uwu_button_borderless_dialog</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/uwu_button_borderless_dialog</item>
        <item name="android:windowElevation">0.0dip</item>
        <item name="android:colorEdgeEffect">@color/uwu_accent</item>
    </style>

    <style name="uwu_popup_window" parent="@style/AppThemeBase">
        <item name="android:popupBackground">@drawable/uwu_card_view_corner</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:dropDownHorizontalOffset">0.0dip</item>
        <item name="android:dropDownVerticalOffset">0.0dip</item>
        <item name="android:popupElevation">5.0dip</item>
    </style>

    <style name="CollapsingToolbarTitle.Collapsed" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textSize">20.0dip</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="CollapsingToolbarTitle.Expanded" parent="@style/CollapsingToolbarTitle.Collapsed">
        <item name="android:textSize">36.0dip</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="BasePreferenceThemeOverlay" parent="@style/AppThemeBase">
        <item name="android:scrollbars">vertical</item>
        <item name="checkBoxPreferenceStyle">@style/Preference.CheckBoxPreference.Material</item>
        <item name="dialogPreferenceStyle">@style/Preference.DialogPreference.Material</item>
        <item name="dropdownPreferenceStyle">@style/Preference.DropDown.Material</item>
        <item name="editTextPreferenceStyle">@style/Preference.DialogPreference.EditTextPreference.Material</item>
        <item name="preferenceCategoryTitleTextAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="preferenceFragmentCompatStyle">@style/PreferenceFragment.Material</item>
        <item name="preferenceFragmentListStyle">@style/PreferenceFragmentList.Material</item>
        <item name="preferenceFragmentStyle">@style/PreferenceFragment.Material</item>
        <item name="preferenceScreenStyle">@style/Preference.PreferenceScreen.Material</item>
        <item name="preferenceStyle">@style/Preference.Material</item>
        <item name="seekBarPreferenceStyle">@style/Preference.SeekBarPreference.Material</item>
        <item name="switchPreferenceCompatStyle">@style/Preference.SwitchPreferenceCompat.Material</item>
        <item name="switchPreferenceStyle">@style/Preference.SwitchPreference.Material</item>
    </style>

</resources>
