<resources>

    <style name="AppTheme" parent="AppThemeBase" />

    <style name="LoginTheme" parent="LoginThemeBase" />

    <style name="ActionBarTheme" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">?android:colorBackground</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.DayNight">
        <item name="android:windowIsFloating">true</item>
        <item name="android:dialogCornerRadius">18dp</item>
        <item name="colorBackgroundFloating">@color/theme_background_light</item>
    </style>

    <style name="AppThemeBase" parent="@style/Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <item name="android:windowBackground">@color/uwu_bg</item>
        <item name="android:scrollbarSize">0.0dip</item>
        <item name="android:homeAsUpIndicator">@drawable/uwu_back_arrow</item>
        <item name="android:statusBarColor">?colorPrimary</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="colorAccent">@color/uwu_accent_light</item>
        <item name="colorBackgroundFloating">@color/uwu_bg_card</item>
        <item name="colorMainText">@color/colorText</item>
        <item name="colorPrimary">@color/uwu_primary_light</item>
        <item name="colorPrimaryDark">?colorPrimary</item>
        <item name="elevation">0.0dip</item>
        <item name="colorIcon">@android:color/white</item>
        <item name="colorText">@android:color/white</item>
        <item name="preferenceCategoryStyle">@style/Preference.xd.Category</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:tint">@android:color/white</item>
        <item name="android:homeAsUpIndicator">@drawable/uwu_back_arrow</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorPrimary">@color/uwu_primary_light</item>
        <item name="colorPrimaryDark">?colorPrimary</item>
    </style>

    <style name="LoginThemeBase" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/theme_background_light</item>
        <item name="android:colorAccent">@color/theme_accent_light</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="colorPrimary">?android:colorBackground</item>
        <item name="colorPrimaryDark">?android:colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Preference.xd.Category" parent="@style/Preference.Category">
        <item name="android:layout">@layout/xd_preference_category_material</item>
        <item name="android:selectable">false</item>
        <item name="android:shouldDisableView">false</item>
        <item name="allowDividerBelow">false</item>
    </style>

    <style name="xd_text_primary">
        <item name="android:textSize">19.0sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:fontFamily">@font/virgoo</item>
    </style>

    <style name="xd_text_secondary">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

</resources>
