<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_checked="true">
        <layer-list>
            <item>
                <shape
                    android:visible="true"
                    android:shape="rectangle"
                    android:useLevel="false">
                    <solid
                        android:color="@color/uwu_accent_alpha1" />
                    <stroke
                        android:width="1.5dip"
                        android:color="@color/uwu_accent" />
                    <corners
                        android:radius="90.0dip" />
                    <size
                        android:height="33.0dip"
                        android:width="31.0dip" />
                </shape>
            </item>
            <item
                android:gravity="center|left"
                android:height="26.0dip"
                android:width="26.0dip"
                android:drawable="@drawable/uwu_cloud_on"
                android:left="4.0dip"
                android:right="-4.0dip" />
        </layer-list>
    </item>
    <item
        android:state_checked="false">
        <layer-list>
            <item>
                <shape
                    android:visible="true"
                    android:shape="rectangle"
                    android:useLevel="false">
                    <solid
                        android:color="#ff2e3336" />
                    <stroke
                        android:width="1.5dip"
                        android:color="?android:textColorSecondary" />
                    <corners
                        android:radius="90.0dip" />
                    <size
                        android:height="33.0dip"
                        android:width="31.0dip" />
                </shape>
            </item>
            <item
                android:gravity="center|right"
                android:height="26.0dip"
                android:width="26.0dip"
                android:drawable="@drawable/uwu_star_off"
                android:left="-4.0dip"
                android:right="4.0dip" />
        </layer-list>
    </item>
    <item
        android:state_enabled="false"
        android:height="33.0dip"
        android:width="31.0dip"
        android:drawable="@drawable/uwu_back_drawable_disabled_background" />
</selector>