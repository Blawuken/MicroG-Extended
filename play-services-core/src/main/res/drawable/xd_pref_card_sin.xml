<?xml version="1.0" encoding="utf-8"?>
<ripple
    android:color="@color/xd_pref_ripple"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/mask">
        <shape>
            <solid
                android:color="#ffffffff" />
            <corners
                android:topLeftRadius="@dimen/xd_pref_card_radius"
                android:topRightRadius="@dimen/xd_pref_card_radius"
                android:bottomLeftRadius="@dimen/xd_pref_card_radius"
                android:bottomRightRadius="@dimen/xd_pref_card_radius" />
        </shape>
    </item>
    <item
        android:id="@android:id/background">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/xd_pref_card_color" />
            <corners
                android:topLeftRadius="@dimen/xd_pref_card_radius"
                android:topRightRadius="@dimen/xd_pref_card_radius"
                android:bottomLeftRadius="@dimen/xd_pref_card_radius"
                android:bottomRightRadius="@dimen/xd_pref_card_radius" />
        </shape>
    </item>
</ripple>