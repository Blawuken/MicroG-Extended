<?xml version="1.0" encoding="utf-8"?>
<ripple
    android:color="@color/xd_pref_ripple"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/mask">
        <shape>
            <solid
                android:color="#ffffffff" />
            <corners
                android:topLeftRadius="15.0dip"
                android:topRightRadius="15.0dip"
                android:bottomLeftRadius="15.0dip"
                android:bottomRightRadius="15.0dip" />
        </shape>
    </item>
    <item
        android:id="@android:id/background">
        <shape
            android:tint="@color/extended_color"
            android:shape="rectangle">
            <solid
                android:color="@color/xd_pref_card_opaque" />
            <corners
                android:topLeftRadius="15.0dip"
                android:topRightRadius="15.0dip"
                android:bottomLeftRadius="15.0dip"
                android:bottomRightRadius="15.0dip" />
        </shape>
    </item>
</ripple>