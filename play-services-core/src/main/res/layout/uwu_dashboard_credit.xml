<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:orientation="horizontal"
        android:background="@drawable/uwu_banner_bg_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.0dip"
        android:layout_marginBottom="0.0dip"
        android:layout_marginStart="16.0dip"
        android:layout_marginEnd="16.0dip">

        <FrameLayout
            android:layout_gravity="center|top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:layout_marginBottom="5.0dip"
            android:layout_marginHorizontal="16.0dip">

            <LinearLayout
                android:layout_gravity="end|center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:padding="2.0dip"
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:src="@drawable/ic_rounded"
                    android:tint="?attr/colorPrimary" />

                <ImageView
                    android:padding="2.0dip"
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:src="@drawable/ic_rounded"
                    android:tint="?attr/colorPrimaryContainer" />

                <ImageView
                    android:padding="2.0dip"
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:src="@drawable/ic_rounded"
                    android:tint="?android:textColorSecondary" />

            </LinearLayout>

        </FrameLayout>

        <com.neko.elasticview.ElasticView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="300.0dip"
            android:layout_marginLeft="12.0dip"
            android:layout_marginTop="30.0dip"
            android:layout_marginRight="12.0dip"
            android:layout_marginBottom="12.0dip"
            android:layout_marginHorizontal="12.0dip"
            android:layerType="software"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="19.0dip"
            app:cardElevation="0.0dip">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/uwu_banner_image_2"
                android:scaleType="centerCrop" />

            <View
                android:background="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.2" />

        </com.neko.elasticview.ElasticView>

        <LinearLayout
            android:gravity="start|bottom|center"
            android:layout_gravity="start|bottom|center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.0dip"
            android:layout_marginBottom="20.0dip"
            android:layout_marginStart="20.0dip"
            android:layout_marginEnd="20.0dip">

            <TextView
                android:textSize="17.0sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="start|center"
                android:layout_gravity="start|center"
                android:paddingLeft="12.0dip"
                android:paddingRight="12.0dip"
                android:fadingEdge="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="8.0dip"
                android:text="@string/uwu_about_title"
                android:singleLine="true"
                android:paddingHorizontal="12.0dip" />

            <TextView
                android:textSize="14.0sp"
                android:textColor="@android:color/white"
                android:ellipsize="marquee"
                android:gravity="start|center"
                android:layout_gravity="start|center"
                android:paddingLeft="12.0dip"
                android:paddingTop="4.0dip"
                android:paddingRight="12.0dip"
                android:paddingBottom="4.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1.0dip"
                android:text="@string/uwu_about_summary"
                android:paddingHorizontal="12.0dip"
                android:paddingVertical="4.0dip" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
