<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:background="@drawable/uwu_banner_bg_bot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.0dip"
        android:layout_marginBottom="5.0dip"
        android:layout_marginStart="16.0dip"
        android:layout_marginEnd="16.0dip">
        <LinearLayout
            android:gravity="start|center"
            android:orientation="horizontal"
            android:background="@drawable/uwu_card_accent_update"
            android:layout_width="0.0dip"
            android:layout_height="60.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginBottom="10.0dip"
            android:layout_weight="1.0"
            android:paddingStart="16.0dip"
            android:paddingEnd="16.0dip"
            android:layout_marginStart="16.0dip"
            android:layout_marginEnd="2.0dip">
            <ImageView
                android:gravity="start|center"
                android:layout_width="27.0dip"
                android:layout_height="27.0dip"
                android:src="@drawable/ic_version_name" />
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16.0dip"
                android:paddingEnd="0.0dip">
                <TextView
                    android:textSize="17.0sp"
                    android:textColor="@android:color/white"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Version" />
                <com.neko.marquee.text.AutoMarqueeVersiTextView
                    android:textSize="14.0sp"
                    android:textColor="@android:color/white"
                    android:ellipsize="marquee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_gravity="center"
            android:background="?android:listDivider"
            android:layout_width="2.0px"
            android:layout_height="match_parent"
            android:layout_marginTop="10.0dip"
            android:layout_marginBottom="10.0dip" />
        <LinearLayout
            android:gravity="start|center"
            android:orientation="horizontal"
            android:background="@drawable/uwu_card_accent_update"
            android:layout_width="0.0dip"
            android:layout_height="60.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginBottom="10.0dip"
            android:layout_weight="1.0"
            android:paddingStart="16.0dip"
            android:paddingEnd="16.0dip"
            android:layout_marginStart="2.0dip"
            android:layout_marginEnd="16.0dip">
            <ImageView
                android:gravity="start|center"
                android:layout_width="27.0dip"
                android:layout_height="27.0dip"
                android:src="@drawable/ic_core" />
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16.0dip"
                android:paddingEnd="0.0dip">
                <TextView
                    android:textSize="17.0sp"
                    android:textColor="@android:color/white"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hardware" />
                <com.neko.marquee.deviceinfo.Hardware
                    android:textSize="14.0sp"
                    android:textColor="@android:color/white"
                    android:ellipsize="marquee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>