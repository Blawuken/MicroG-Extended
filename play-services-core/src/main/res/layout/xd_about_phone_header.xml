<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:background="@drawable/uwu_banner_bg_top"
    android:clipToPadding="false"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4.0dip"
    android:layout_marginBottom="0.0dip"
    android:layout_marginStart="16.0dip"
    android:layout_marginEnd="16.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center_vertical"
        android:clipToPadding="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:minHeight="?android:listPreferredItemHeightSmall"
        android:paddingStart="?android:listPreferredItemPaddingStart"
        android:paddingEnd="?android:listPreferredItemPaddingEnd">
        <io.armcha.elasticview.ElasticView
            android:layout_width="150.0dip"
            android:layout_height="fill_parent"
            android:layout_marginTop="16.0dip"
            android:layout_marginBottom="16.0dip"
            android:layout_marginStart="2.0dip"
            app:cardBackgroundColor="@color/uwu_bg"
            app:cardCornerRadius="18.0dip"
            app:cardElevation="0.0dip">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/uwu_banner_image_1"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true" />
            <LinearLayout
                android:background="@android:color/black"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:alpha="0.2" />
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextClock
                    android:textSize="56.0sp"
                    android:typeface="monospace"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-35.0dip"
                    android:fontFamily="@font/font_7f090000"
                    android:format12Hour="hh"
                    android:format24Hour="kk"
                    android:fontFeatureSettings="tnum, cv03, cv04" />
                <TextClock
                    android:textSize="56.0sp"
                    android:typeface="monospace"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10.0dip"
                    android:fontFamily="@font/font_7f090000"
                    android:format12Hour="mm"
                    android:format24Hour="mm"
                    android:fontFeatureSettings="tnum, cv03, cv04" />
            </LinearLayout>
        </io.armcha.elasticview.ElasticView>
        <RelativeLayout
            android:padding="20.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">
            <TextView
                android:textSize="17.0sp"
                android:textColor="?android:textColorPrimary"
                android:id="@+id/uwu_name_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12.0dip"
                android:text="@string/xd_device_name"
                android:singleLine="true" />
            <TextView
                android:textSize="14.0sp"
                android:textColor="?android:textColorSecondary"
                android:ellipsize="marquee"
                android:id="@+id/uwu_name_title_summary"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12.0dip"
                android:text="@string/xd_device_name_summary"
                android:singleLine="true"
                android:layout_below="@+id/uwu_name_title"
                android:marqueeRepeatLimit="marquee_forever"
                android:layout_alignStart="@+id/uwu_name_title" />
            <TextView
                android:textSize="17.0sp"
                android:textColor="?android:textColorPrimary"
                android:id="@+id/uwu_developer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/xd_chipset_type"
                android:singleLine="true"
                android:layout_below="@+id/uwu_name_title_summary"
                android:layout_alignStart="@+id/uwu_name_title_summary" />
            <TextView
                android:textSize="14.0sp"
                android:textColor="?android:textColorSecondary"
                android:ellipsize="marquee"
                android:id="@+id/uwu_developer_summary"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12.0dip"
                android:text="@string/xd_chipset_type_summary"
                android:singleLine="true"
                android:layout_below="@+id/uwu_developer"
                android:marqueeRepeatLimit="marquee_forever"
                android:layout_alignStart="@+id/uwu_developer" />
            <TextView
                android:textSize="17.0sp"
                android:textColor="?android:textColorPrimary"
                android:id="@+id/uwu_modder"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/xd_gpu"
                android:singleLine="true"
                android:layout_below="@+id/uwu_developer_summary"
                android:layout_alignStart="@+id/uwu_developer_summary" />
            <TextView
                android:textSize="14.0sp"
                android:textColor="?android:textColorSecondary"
                android:ellipsize="marquee"
                android:id="@+id/uwu_modder_summary"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12.0dip"
                android:text="@string/xd_gpu_summary"
                android:singleLine="true"
                android:layout_below="@+id/uwu_modder"
                android:marqueeRepeatLimit="marquee_forever"
                android:layout_alignStart="@+id/uwu_modder" />
            <TextView
                android:textSize="17.0sp"
                android:textColor="?android:textColorPrimary"
                android:id="@+id/uwu_version_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/xd_camera_mp"
                android:singleLine="true"
                android:layout_below="@+id/uwu_modder_summary"
                android:layout_alignStart="@+id/uwu_modder_summary" />
            <TextView
                android:textSize="14.0sp"
                android:textColor="?android:textColorSecondary"
                android:ellipsize="marquee"
                android:id="@+id/uwu_version_name_summary"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12.0dip"
                android:text="@string/xd_camera_mp_summary"
                android:singleLine="true"
                android:layout_below="@+id/uwu_version_name"
                android:marqueeRepeatLimit="marquee_forever"
                android:layout_alignStart="@+id/uwu_version_name" />
            <TextView
                android:textSize="17.0sp"
                android:textColor="?android:textColorPrimary"
                android:id="@+id/uwu_version_code"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/xd_battery_type"
                android:singleLine="true"
                android:layout_below="@+id/uwu_version_name_summary"
                android:layout_alignStart="@+id/uwu_version_name_summary" />
            <TextView
                android:textSize="14.0sp"
                android:textColor="?android:textColorSecondary"
                android:ellipsize="marquee"
                android:id="@+id/uwu_version_code_summary"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12.0dip"
                android:text="@string/xd_battery_type_summary"
                android:singleLine="true"
                android:layout_below="@+id/uwu_version_code"
                android:marqueeRepeatLimit="marquee_forever"
                android:layout_alignStart="@+id/uwu_version_code" />
            <TextView
                android:textSize="17.0sp"
                android:textColor="?android:textColorPrimary"
                android:id="@+id/uwu_package_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/xd_screen_type"
                android:singleLine="true"
                android:layout_below="@+id/uwu_version_code_summary"
                android:layout_alignStart="@+id/uwu_version_code_summary" />
            <TextView
                android:textSize="14.0sp"
                android:textColor="?android:textColorSecondary"
                android:ellipsize="marquee"
                android:id="@+id/uwu_package_name_summary"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12.0dip"
                android:text="@string/xd_screen_type_summary"
                android:singleLine="true"
                android:layout_below="@+id/uwu_package_name"
                android:marqueeRepeatLimit="marquee_forever"
                android:layout_alignStart="@+id/uwu_package_name" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>