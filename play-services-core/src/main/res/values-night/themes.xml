<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.DayNight">
        <item name="android:windowIsFloating">true</item>
        <item name="android:dialogCornerRadius">18dp</item>
        <item name="colorBackgroundFloating">@color/theme_background_dark</item>
    </style>

    <style name="Theme.Material3.DayNight" parent="Theme.Material3.Dark">
        <item name="colorPrimaryDark">@android:color/transparent</item>
    </style>

    <style name="AppThemeBase" parent="@style/Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <item name="android:windowBackground">@color/uwu_bg</item>
        <item name="android:scrollbarSize">0.0dip</item>
        <item name="android:homeAsUpIndicator">@drawable/uwu_back_arrow</item>
        <item name="android:statusBarColor">?colorPrimary</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="colorAccent">@color/uwu_accent_dark</item>
        <item name="colorBackgroundFloating">@color/uwu_bg_card</item>
        <item name="colorIcon">@android:color/white</item>
        <item name="colorMainText">@color/colorText</item>
        <item name="colorPrimary">@color/uwu_primary_dark</item>
        <item name="colorPrimaryDark">?colorPrimary</item>
        <item name="colorText">@android:color/white</item>
        <item name="elevation">0.0dip</item>
        <item name="preferenceCategoryStyle">@style/Preference.xd.Category</item>
        <item name="android:dialogTheme">@style/uwu_dialog</item>
        <item name="android:alertDialogTheme">@style/uwu_alert_dialog</item>
        <item name="android:actionOverflowMenuStyle">@style/uwu_popup_window</item>
        <item name="android:dialogCornerRadius">28.0dip</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:tint">@android:color/white</item>
        <item name="android:homeAsUpIndicator">@drawable/uwu_back_arrow</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorPrimary">@color/uwu_primary_dark</item>
        <item name="colorPrimaryDark">?colorPrimary</item>
    </style>

    <style name="LoginThemeBase" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/theme_background_dark</item>
        <item name="android:colorAccent">@color/theme_accent_dark</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="colorPrimary">?android:colorBackground</item>
        <item name="colorPrimaryDark">?android:colorBackground</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="uwu_dialog" parent="@android:style/Theme.Material.Dialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:buttonStyle">@style/uwu_button_borderless</item>
        <item name="android:windowBackground">@drawable/uwu_dialog_bg</item>
        <item name="android:windowAnimationStyle">@style/uwu_modder_app_anim</item>
        <item name="android:windowMinWidthMajor">75.0%</item>
        <item name="android:windowMinWidthMinor">75.0%</item>
        <item name="android:colorControlHighlight">@color/uwu_ripple</item>
        <item name="android:colorAccent">@color/uwu_accent</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/uwu_button_borderless_dialog</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/uwu_button_borderless_dialog</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/uwu_button_borderless_dialog</item>
        <item name="android:windowElevation">0.0dip</item>
        <item name="android:colorEdgeEffect">@color/uwu_accent</item>
    </style>

</resources>

