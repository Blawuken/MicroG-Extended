<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:layout="@layout/xd_about_phone_header"
        android:selectable="false" />

    <Preference
        android:icon="@drawable/uwu_github"
        android:layout="@layout/uwu_bot"
        android:title="@string/github"
        android:summary="@string/github_source">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="@string/github_link" />
    </Preference>

    <Preference
        android:icon="@drawable/uwu_sbuild"
        android:layout="@layout/uwu_pref_card_sin_accent"
        android:title="@string/uwu_build_status"
        android:selectable="false"
        android:summary="@string/uwu_build_sum" />

    <PreferenceCategory
        android:title="@string/uwu_information_cat" />

    <Preference
        android:icon="@drawable/uwu_neko"
        android:layout="@layout/uwu_top_no_arrow"
        android:title="@string/uwu_neko_version"
        android:summary="@string/extended_build_app_version_release" />

    <Preference
        android:icon="@drawable/uwu_build_type"
        android:layout="@layout/uwu_mid_no_arrow"
        android:title="@string/uwu_build_type"
        android:summary="@string/uwu_build_type_variant" />

    <Preference
        android:icon="@drawable/uwu_payload"
        android:layout="@layout/uwu_mid_no_arrow"
        android:title="@string/uwu_build_version_code"
        android:summary="@string/extended_build_app_version_code" />

    <Preference
        android:icon="@drawable/uwu_build_date"
        android:layout="@layout/uwu_bot_no_arrow"
        android:title="@string/uwu_build_date"
        android:summary="@string/extended_build_date" />

    <PreferenceCategory
        android:title="@string/uwu_recommended_os_cat" />

    <Preference
        android:icon="@drawable/uwu_android"
        android:layout="@layout/uwu_top_no_arrow"
        android:title="@string/uwu_version_sdk_minimum"
        android:summary="@string/extended_build_min_sdk" />

    <Preference
        android:icon="@drawable/uwu_android"
        android:layout="@layout/uwu_bot_no_arrow"
        android:title="@string/uwu_version_sdk_target"
        android:summary="@string/extended_build_target_sdk" />

</PreferenceScreen>
